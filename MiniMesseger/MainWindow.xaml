<Window x:Class="MiniMesseger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniMesseger"
        mc:Ignorable="d"
        Title="Вход" Height="450" Width="800">
    <StackPanel Margin="200,50">
        <TextBlock Text="Введите логин:" FontSize="25"/>
        <TextBox FontSize="25" Name="LoginBox"/>
        <TextBlock Text="Введите пароль" FontSize="25"/>
        <PasswordBox FontSize="25" Name="PasswordBox"/>
        <Button Content="Войти" FontSize="25" Margin="20" Click="Button_Click"/>
        <TextBlock FontSize="15"/>
    </StackPanel>
</Window>
